<div class="container">
  <div class="burger-lists">
    {{#if burgers.notDevoured }}
    <div class="devoured">
      {{#each burgers.notDevoured}}
      <div class="item">
        <p>{{ this.burger_name }}</p>
        <button type="submit" id="devour" data-id="{{this.id}}">Devour!</button>
      </div>
      {{/each}}
    </div>
    {{/if}}
    {{#if burgers.devoured}}
    <div class="notdevoured">
      {{#each burgers.devoured}}
      <p>{{ this.burger_name }}</p>
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>